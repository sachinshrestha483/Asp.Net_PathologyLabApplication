
@model LabReport2.Models.Doctor
@{
    ViewBag.Title = "DoctorForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">DoctorForm</h2>

<div class="container">

    @using (Html.BeginForm("Save", "Doctor"))
    {

        <div class="form-group">
            @Html.LabelFor(d => d.Name)
            @Html.TextBoxFor(d => d.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.Commission)
            @Html.TextBoxFor(d => d.Commission, new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Commission)
        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.Phone)
            @Html.TextBoxFor(d => d.Phone, new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Phone)
        </div>
        @Html.HiddenFor(d => d.Id)
        <br>
        <div><button class="btn btn-primary" type="submit">Submit</button></div>

        @Html.AntiForgeryToken()
    }

</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

}


